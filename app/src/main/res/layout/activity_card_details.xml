<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.root.authex.CardDetails">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:gravity="center"
        android:text="Fill Out Details"
        android:textSize="24dip"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dip"
        android:layout_marginRight="50dip"
        android:layout_marginTop="40dip"
        
        android:id="@+id/email"
        android:hint="email"
        android:paddingLeft="20dip" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="click to verify email"
        android:layout_marginLeft="50dip"
        android:layout_marginRight="50dip"
        android:gravity="end"
        android:id="@+id/verify_email"
        android:textColor="#FF6C00"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dip"
        android:layout_marginRight="50dip"
        android:layout_marginTop="10dip"
        
        android:id="@+id/mno"
        android:hint="+91 XXXXX XXXXX"
        android:paddingLeft="20dip" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="click to verify number"
        android:layout_marginLeft="50dip"
        android:layout_marginRight="50dip"
        android:gravity="end"
        android:id="@+id/verify_number"
        android:textColor="#FF6C00"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dip"
        android:layout_marginRight="50dip"
        android:layout_marginTop="20dip"
        
        android:paddingLeft="20dip"
        android:text="Optional"
        android:textColor="#FF6C00"
        android:textSize="20dip" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dip"
        android:background="@drawable/rectangle_border"
        android:layout_marginLeft="50dip"
        android:layout_marginRight="50dip">


        <EditText
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="10dip"
            android:layout_marginRight="10dip"
            android:layout_weight="1"
            android:ems="10"
            android:hint="address"
            android:backgroundTint="#eeeeee"
            android:inputType="textMultiLine"
            android:textSize="16dip" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/l2">


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/colorPrimary"
            
            android:text="submit"
            android:id="@+id/submit"
            android:textColor="#ffffff"
            android:textSize="20dip" />
    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.root.authex.ThankYou">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:layout_marginLeft="70dip"
        android:layout_marginRight="70dip"
        android:src="@drawable/smily"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        
        android:gravity="center"
        android:text="Thank You For Shopping"
        android:textSize="24dip"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dip"
        
        android:gravity="center"
        android:text="Do you want to save your purchase history"
        android:textSize="16dip" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dip"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dip"
            android:background="#03890B"
            
            android:padding="8dip"
            android:text="YES"
            android:textColor="#ffffff"
            android:textSize="16dip"
            android:textStyle="bold" />

        <TextView
            android:layout_width="80dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dip"
            android:background="#C40D01"
            
            android:padding="8dip"
            android:text="NO"
            android:textColor="#ffffff"
            android:textSize="16dip"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="30dip"
        android:layout_marginTop="50dip">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            
            android:text="Note- Purchasing history is profitable for you" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            
            android:text=". We will just save your history with your permission." />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            
            android:text=". This information will be kept confidential." />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            
            android:text=". You can see your history in future." />
    </LinearLayout>

</LinearLayout>
